<Page x:Class="WpfApp1.View.CreatePartner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="Создание партнеров" Height="600" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"
                   FontSize="30" Text="{Binding PageTitle}" HorizontalAlignment="Center"/>

        <Button Grid.Column="2" Grid.Row="0" Content="⏪" MinHeight="50" MinWidth="50" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Background="{StaticResource AccentColor}"
                Click="BackButton_Click"/>

<StackPanel Grid.Row="0" Grid.Column="0" Background="{StaticResource SecondaryColor}"
            Grid.ColumnSpan="3" Grid.RowSpan="3"
            HorizontalAlignment="Stretch"
	VerticalAlignment="Center">

    <StackPanel Orientation="Horizontal" Margin="5">
        <Label Content="Тип партнера:" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <ComboBox x:Name="PartnerTypeComboBox" HorizontalAlignment="Stretch" ItemsSource="{Binding PartnerTypes}" Width="300"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="5">
        <Label Content="Название партнера:" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="CompanyNameTextBox" Width="300" HorizontalAlignment="Stretch" Text="(до 50 символов)"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="5">
        <Label Content="ФИО директора:" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="DirectorNameTextBox" Width="300" HorizontalAlignment="Stretch" Text=""/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="5">
        <Label Content="Номер телефона:" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="PhoneTextBox" Width="300" HorizontalAlignment="Stretch" Text="(10 цифр)"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="5">
        <Label Content="Email:" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="EmailTextBox" Width="300" HorizontalAlignment="Stretch" Text="(до 30 символов)"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="5">
        <Label Content="Рейтинг:" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="RatingTextBox" Width="300" HorizontalAlignment="Stretch" Text="(0-100)"/>
    </StackPanel>

    <StackPanel Orientation="Horizontal" Margin="5">
        <Label Content="Адрес регистрации:" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="RegisteredAddressTextBox" Width="300" HorizontalAlignment="Stretch" Text=""/>
    </StackPanel>

</StackPanel>

        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="SavePartner" Content="{Binding ButtonText}" Background="{StaticResource AccentColor}" MinHeight="50"/>
    </Grid>

</Page>
