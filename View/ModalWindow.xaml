<Window x:Class="WpfApp1.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="Расчет материала" Height="600" Width="800">

	<StackPanel Margin="10">
		<TextBlock Text="Тип материала:" />
		<ComboBox x:Name="MaterialTypeComboBox" ItemsSource="{Binding MaterialTypes}" Margin="0,0,0,10" />

		<TextBlock Text="Тип продукта:" />
		<ComboBox x:Name="ProductTypeComboBox" ItemsSource="{Binding ProductTypes}" Margin="0,0,0,10" />

		<TextBlock Text="Ширина (м):" />
		<TextBox x:Name="WidthTextBox" Margin="0,0,0,10" />

		<TextBlock Text="Количество:" />
		<TextBox x:Name="QuantityTextBox" Margin="0,0,0,10" />

		<Button Content="Рассчитать" Click="CalculateButton_Click" />
	</StackPanel>
</Window>